{
  "version": 2,
  "builds": [
    {
      "src": "api/savoire.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "styles/**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "scripts/**/*.js", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/savoire.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}